<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="#F5F5F5"
    android:layout_marginTop="20dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Appointment Cancellation"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#222222"
        android:layout_marginBottom="60dp"/>

    <ImageView
        android:id="@+id/ivCalendarIcon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_future"
    android:layout_marginBottom="40dp"
    android:contentDescription="Calendar Icon"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select a time and confirm your cancellation request."
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="20dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvTodayDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Today's Date: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/btnSelectTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Time"
            android:textSize="18sp"
            android:backgroundTint="@color/blueBtn"
            android:textColor="#FFFFFF"
            android:background="@drawable/border_textview"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvSelectedTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Time: None"
        android:textSize="18sp"
        android:textColor="#444444"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:padding="8dp"
        android:background="@drawable/border_textview"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

        <Button
            android:id="@+id/btnConfirmCancellation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Cancellation"
            android:textSize="18sp"
            android:backgroundTint="@color/red"
            android:textColor="#FFFFFF"
            android:background="@drawable/border_textview"
            android:padding="12dp"/>
    </androidx.cardview.widget.CardView>

</LinearLayout>
